# Tron AI Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# OpenAI API Key (Required for most agents)
OPENAI_API_KEY=your-openai-api-key-here

# Groq API Key (Required for chat command)
GROQ_API_KEY=your-groq-api-key-here

# =============================================================================
# OPTIONAL API KEYS FOR SPECIFIC AGENTS
# =============================================================================

# Perplexity API Key (for product management agent)
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# Todoist API Token (for todoist agent)
TODOIST_API_TOKEN=your-todoist-api-token-here

# Notion API Token (for notion agent)
NOTION_API_TOKEN=your-notion-api-token-here

# Google Application Credentials (for Google agent)
# Path to your Google service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Root logger level
TRON_LOG_LEVEL_ROOT=WARNING

# Main application logger level
TRON_LOG_LEVEL_tron_ai=DEBUG

# Third-party library logger levels
TRON_LOG_LEVEL_THIRD_PARTY=WARNING
TRON_LOG_LEVEL_ADALFLOW=WARNING
TRON_LOG_LEVEL_MCP_CLIENT=WARNING
TRON_LOG_LEVEL_HTTPX=WARNING
TRON_LOG_LEVEL_OPENAI=WARNING

# Utility logger levels
TRON_LOG_LEVEL_UTILITY=WARNING

# Specific logger overrides (replace dots with underscores)
TRON_LOG_LEVEL_tron_ai_CLI=INFO
TRON_LOG_LEVEL_tron_ai_CONFIG=DEBUG
TRON_LOG_LEVEL_tron_ai_UTILS_LLM_LLMCLIENT=WARNING
TRON_LOG_LEVEL_tron_ai_UTILS_CONCURRENCY_CONNECTION_MANAGER=WARNING
TRON_LOG_LEVEL_tron_ai_UTILS_CONCURRENCY_PROCESS_MONITOR=WARNING
TRON_LOG_LEVEL_tron_ai_UTILS_IO_FILE_MANAGER=WARNING
TRON_LOG_LEVEL_tron_ai_UTILS_IO_FILE_MANAGER_ASYNC=WARNING
TRON_LOG_LEVEL_tron_ai_UTILS_IO_JSON=WARNING
TRON_LOG_LEVEL_tron_ai_UTILS_IO_PROMPT_LOADER=WARNING
TRON_LOG_LEVEL_tron_ai_UTILS_GRAPH_GRAPH=WARNING

# Logging format and display options
TRON_LOG_FORMAT=%(message)s
TRON_LOG_DATEFMT=[%X]
TRON_LOG_HANDLER_LEVEL=DEBUG
TRON_LOG_RICH_TRACEBACKS=true
TRON_LOG_SHOW_LOCALS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection URL (SQLite by default)
DATABASE_URL=sqlite+aiosqlite:///./data/conversations.db

# Database settings
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Python path and environment
PYTHONPATH=.
PYTHONUNBUFFERED=1

# Development mode
TRON_DEV_MODE=false

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# MCP configuration file path
MCP_CONFIG=mcp_servers.json

# =============================================================================
# SSH CONFIGURATION (for SSH agent)
# =============================================================================

# SSH connection timeout
SSH_TIMEOUT=30

# SSH key path (if using key-based authentication)
SSH_KEY_PATH=~/.ssh/id_rsa

# =============================================================================
# MEMORY AND VECTOR STORE CONFIGURATION
# =============================================================================

# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=./.chroma

# Memory settings
MEMORY_MAX_RESULTS=100
MEMORY_SIMILARITY_THRESHOLD=0.8

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Connection pool settings
CONNECTION_POOL_SIZE=10
CONNECTION_POOL_TIMEOUT=30

# Retry settings
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2
RETRY_MAX_BACKOFF=60

# Timeout settings
TIMEOUT_MCP_AGENT=1024
TIMEOUT_COMPLETION=1024
TIMEOUT_DEFAULT=60
TIMEOUT_MCP_INIT=2
TIMEOUT_TASK_EXECUTION=2048
